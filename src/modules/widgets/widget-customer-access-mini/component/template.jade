.widget-customer-access-mini
    .horizontal(ng-show="horizontal")
        form.ht-form-mini(name="htFormWidgetCustomerAccessminiHorizontal" ng-hide="$root.customer.logged")
            .col-md-5
                input.ht-input(ng-model="model.email" type='email' name="email" placeholder="Email" required)
            .col-md-5
                input.ht-input(ng-model="model.password" type='text' name="password" placeholder="Password" required)
            .col-md-2
                button.ht-btn(type='submit' ng-click="login()" ng-disabled="htFormWidgetCustomerAccessMini.$invalid") {{ 'CUSTOMER.common.login' | translate }}
            .col-md-12
                .ht-go-register(ng-click="$root.WCAM.view.RegisterModal = !$root.WCAM.view.RegisterModal") {{ 'CUSTOMER.register.go' | translate }}
        .logout(ng-show="$root.customer.logged")
            .row
                .col-md-2
                    img.profile-img(ng-src="{{customer.image ||  defaultImage}}")
                .col-md-10
                    .customer-name {{ 'CUSTOMER.common.welcome' | translate }} {{customer.name || customer.username}} !
                    p.logout-text(ng-click="logout()") {{ 'CUSTOMER.common.logout' | translate }}

    .vertical(ng-show="vertical")
        form.ht-form-mini(name="htFormWidgetCustomerAccessminiVertical" ng-hide="$root.customer.logged")
            .col-md-12
                input.ht-input(ng-model="model.email" type='email' name="email" placeholder="Email" required)
            .col-md-12
                input.ht-input(ng-model="model.password" type='text' name="password" placeholder="Password" required)
            .col-md-12
                button.ht-btn(type='submit' ng-click="login()" ng-disabled="htFormWidgetCustomerAccessMini.$invalid") {{ 'CUSTOMER.common.login' | translate }}
            .col-md-12
                .ht-go-register(ng-click="$root.WCAM.view.RegisterModal = !$root.WCAM.view.RegisterModal") {{ 'CUSTOMER.register.go' | translate }}
        .logout(ng-show="$root.customer.logged")
            .row
                .col-md-2
                    img.profile-img(ng-src="{{customer.image ||  defaultImage}}")
                .col-md-10
                    .customer-name {{ 'CUSTOMER.common.welcome' | translate }} {{customer.name || customer.username}} !
                    p.logout-text(ng-click="logout()") {{ 'CUSTOMER.common.logout' | translate }}
div(ng-if="$root.WCAM.view.RegisterModal" modal-render="true" tabindex="-1" role="dialog" class="modal modalRegister ng-isolate-scope in" uib-modal-animation-class="fade" modal-in-class="in" ng-style="{'z-index': 1050 + index*10, display: 'block'}" uib-modal-window="modal-window" index="0" animate="animate" style="z-index: 1050; display: block;")
    .modal-header
        img.close-modal(ng-src="http://localhost:3030/images/boton-close-grey.svg" ng-click="$root.WCAM.view.RegisterModal = !$root.WCAM.view.RegisterModal" class="badge-detail__img-close ng-scope" src="http://localhost:3030/images/boton-close-grey.svg")
        h3.modal-title {{ 'CUSTOMER.common.register' | translate }}
    .modal-body
        form.ht-form-inline(name="htFormWidgetCustomerAccessMiniRegisterModal" valdr-type="CustomerRegister")
            div(valdr-form-group)
                input.ht-input(ng-model="model.username" type='text' name="username" placeholder="{{ 'CUSTOMER.common.username' | translate }}" required)
            div(valdr-form-group)
                input.ht-input(ng-model="model.email" type='email' name="email" placeholder="{{ 'CUSTOMER.common.email' | translate }}" required)
            div(valdr-form-group)
                input.ht-input(ng-model="model.password" type='password' name="password" placeholder="{{ 'CUSTOMER.common.password' | translate }}" required)
            div(valdr-form-group)
                input.ht-input(ng-model="model.rePassword" type='password' name="rePassword" placeholder="{{ 'CUSTOMER.common.rePassword' | translate }}" required)
            .row
                .col-md-6
                    div
                        input.ht-input(ng-model="model.name" type='text' name="name" placeholder="{{ 'CUSTOMER.common.name' | translate }}")
                    div
                        input.ht-input(ng-model="model.surname" type='text' name="surname" placeholder="{{ 'CUSTOMER.common.surnames' | translate }}")
                    div
                        input.ht-input(ng-model="model.city" type='text' name="city" placeholder="{{ 'CUSTOMER.common.city' | translate }}")
                    div
                        input.ht-input(ng-model="model.address" type='text' name="address" placeholder="{{ 'CUSTOMER.common.direction' | translate }}")
                .col-md-6
                    div
                        select(name="selectGender" id="selectGender" ng-model="model.gender")
                            option(value="") {{ 'CUSTOMER.common.gender' | translate }}
                            option(value="{{ 'CUSTOMER.common.male' | translate }}") {{ 'CUSTOMER.common.male' | translate }}
                            option(value="{{ 'CUSTOMER.common.female' | translate }}") {{ 'CUSTOMER.common.female' | translate }}
                    div
                        input.ht-input(ng-model="model.birthDate" type='text' name="birthDate" placeholder="{{ 'CUSTOMER.common.birthDate' | translate }}")
                    div
                        input.ht-input(ng-model="model.postalCode" type='text' name="postalCode" placeholder="{{ 'CUSTOMER.common.postalCode' | translate }}")
                    div
                        input.ht-input(ng-model="model.telephone" type='text' name="telephone" placeholder="{{ 'CUSTOMER.common.telephone' | translate }}")
            div
                .ht-form__group-terms
                    input(type="checkbox" name="terms" ng-model="model.terms" id="checkbox_terms")
                    label.checkbox_terms(for="checkbox_terms")
                        a(href="http://hooptap.com/en/terms-and-conditions/" target="_blank") {{ 'valdr.generics.terms' | translate }}
                button.ht-BTN(type='submit' ng-disabled="!model.terms" ng-click='register()') {{ 'CUSTOMER.register.button' | translate }}

            //.ht-go-login(ng-click="$root.WCAM.view.RegisterModal = !$root.WCAM.view.RegisterModal") {{ 'CUSTOMER.login.go' | translate }}

    .modal-footer