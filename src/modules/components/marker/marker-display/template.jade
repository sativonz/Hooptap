.ht-marker-display__title {{ 'SCOREUNITS.title' | translate }}
.ht-marker-display__zoneRow.row(ng-repeat="zoneRow in options.zones" id="ht-marker-display__zoneRow-{{$index+1}}")
    .ht-marker-display__wrapper-items.center(ng-repeat="zoneCol in zoneRow" ng-class="{'col-xs-12': zoneRow.length == 1, 'col-xs-6': zoneRow.length == 2, 'col-xs-4': zoneRow.length == 3, 'col-xs-3': zoneRow.length == 4 }")
        .ht-marker-display__su(ng-click="$root.WPF.viewLevelList = !$root.WPF.viewLevelList"   ng-if="zoneCol.model == 'ScoreUnit'" tooltip-placement="top" uib-tooltip="{{ zoneCol.name | translate }}")
            .col-xs-6.not-padding.score
                .title__score-units {{zoneCol.quantity}}
            .col-xs-6.not-padding
                img.ht-marker-display__img(ng-src="{{zoneCol.image}}")
        .ht-marker-display__level(ng-if="zoneCol.model == 'Level'" tooltip-placement="top" uib-tooltip="{{ zoneCol.name | translate }}")
            .col-xs-6.not-padding
                .title__score-units >{{zoneCol.minimum}}
            .col-xs-6.not-padding
                img.ht-marker-display__img(ng-src="{{zoneCol.image}}")
        .ht-marker-display__badges(ng-click="$root.WPF.viewBadges = !$root.WPF.viewBadges" ng-if="zoneCol.model == 'Badge'" tooltip-placement="top" uib-tooltip="{{ 'BADGES.title' | translate }}")
           .col-xs-6.not-padding
                .title__score-units {{zoneCol.count}}
            .col-xs-6.ht-marker-display__badges-img-wrapper.not-padding
                img.ht-marker-display__img(ng-src="{{zoneCol.image}}")
.wrapper__badges-component(ng-if="$root.WPF.viewBadges")
    c-button-back(ng-click="$root.WPF.viewBadges = !$root.WPF.viewBadges")
    c-widget-header(title="{{'BADGES.title' | translate}}")
    c-badges-grid