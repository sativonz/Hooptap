.ht-wrapper--update__form
	c-button-close
	form.ht-form.ht-form--update(name="htFormUpdate")
		.ht-form__group
			input.ht-form__input(ng-model='username' type='text' name="username" required)
			span.ht-form__highlight
			span.ht-form__bar
			label.ht-form__label {{ 'CUSTOMER.common.username' | translate }}
		.ht-form__group
			input.ht-form__input(ng-model='email' type='text' name="email" required)
			span.ht-form__highlight
			span.ht-form__bar
			label.ht-form__label {{ 'CUSTOMER.common.email' | translate }}
		.ht-form__group
			input.ht-form__input(ng-model='actualPassword' type='password' name="actualPassword" required)
			span.ht-form__highlight
			span.ht-form__bar
			label.ht-form__label {{ 'CUSTOMER.update.actualPassword' | translate }}
		.ht-form__group
			input.ht-form__input(ng-model='newPassword1' type='password' name="password" required)
			span.ht-form__highlight
			span.ht-form__bar
			label.ht-form__label {{ 'CUSTOMER.update.newPassword1' | translate }}
		.ht-form__group
			input.ht-form__input(ng-model='newPassword2' type='password' name="password" required)
			span.ht-form__highlight
			span.ht-form__bar
			label.ht-form__label {{ 'CUSTOMER.update.newPassword2' | translate }}
		.ht-form__group-button
			button.ht-form--button__update(type='button' ng-click='update()')
				| {{ 'CUSTOMER.common.update' | translate }}