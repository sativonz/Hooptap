.ht-profile__header(ng-if="$root.logged")
    .ht-profile__header--container.row
        .col-xs-4
            .images
                img.profile-widget-full-item__img(ng-if="$root.customer.image" ng-src="{{$root.customer.image}}")
                //TODO Cambiar por una imagen generica cuando no tenga foto el customer
                img.profile-widget-full-item__img(ng-if="!$root.customer.image" ng-src="http://hooptap.s3.amazonaws.com/widgets/profile/profile-default.svg")
                label(for="file-input")
                    img.profile-widget-full-item__img-upload(ng-src="http://hooptap.s3.amazonaws.com/widgets/profile/simbol-subir-foto.svg")
                input.hide#file-input(type="file")
            img.profile-widget-full__edit(ng-if="editProfile" ng-click="$root.WPFviewEditProfile = !$root.WPFviewEditProfile" ng-src="http://hooptap.s3.amazonaws.com/widgets/profile/Btn-Edit.svg")
            //img.profile-widget-full__logout(ng-src="http://hooptap.s3.amazonaws.com/widgets/logout.svg" ng-click="formLogout()")
        .col-xs-2.not-padding
            p.profile-widget-full-title__name {{ 'CUSTOMER.common.name' | translate }}:
            p.profile-widget-full-title__email {{ 'CUSTOMER.common.email' | translate }}:
        .col-xs-6.not-padding
            p.profile-widget-full-item__name {{$root.customer.username}}
            p.profile-widget-full-item__email {{$root.customer.email}}