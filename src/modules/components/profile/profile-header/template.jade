.ht-profile-header__container(ng-if="$root.customer.logged")
    .ht-profile-header__wrapper.row
        .col-xs-4
            .ht-profile-header__images
                img.ht-profile-header__profile-photo(ng-src="{{item.image || defaultImage}}")
                //TODO Quitar comentarios
                //label(for="file-input")
                //   img.ht-profile-header__img-upload(ng-src=require("./images/img-upload.svg") ng-click="uploadImgProfile()")
                //input.hide#file-input(type="file")
            img.ht-profile-header__edit(ng-if="editProfile" ng-click="$root.WPF.viewEditProfile = !$root.WPF.viewEditProfile" ng-src=require("./images/btn-edit-profile.svg"))
        .col-xs-2.not-padding
            p.ht-profile-header__title-name {{ 'CUSTOMER.common.name' | translate }}:
            p.ht-profile-header__title-email {{ 'CUSTOMER.common.email' | translate }}:
        .col-xs-6.not-padding
            p.ht-profile-header__item-name {{ item.username || defaultUsername }}
            p.ht-profile-header__item-email {{ item.email }}