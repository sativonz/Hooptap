.ht-ranking-list(type="{{rankingType}}")
    .ht-ranking-list__container(ng-repeat="ranking in rankings")
        .ht-ranking-list__wrapper(id="row-{{$index+1}}" ng-repeat="users in ranking.users | orderBy:'-score'  " ng-class="{ 'mePosition': users.mePosition , 'animated': users.mePosition, 'bounceIn': users.mePosition }")
            .col-xs-8.not-padding
                .ranking--list__user-img.col-xs-3
                    img(ng-if="!users.img" ng-src=require("./images/profile-default.svg"))
                    img(ng-if="users.img" ng-src="{{users.img}}")
                    span.ranking--list__position {{$index+1}}
                .ranking--list__username.col-xs-9
                    p {{users.username}}
            .ranking--list__wrapper-score-frame.col-xs-4
                .ranking--list__score-frame
                    img.ranking--list__score-frame-img(ng-src="{{ $root.customer.ranking.image }}")
                    .ranking--list__score-frame-score {{users.score}}