.ht-badges--list__wrapper.row
	uib-tabset(active="active")
		uib-tab(index="0" heading="{{::'BADGES.tabs.all' | translate}}")
			.badge-grid-wrapper.row
				//TODO cambiar el ng repeat por => $root.customer.badges, dejar este solo para test
				.badge-item.animated.bounceIn(ng-repeat="item in badges" id="allBadge-item-{{$index}}" style="{{htCol5}}" ng-class="{'col-xs-{{colWidth}}': true, 'badge-not-achieved': !item.state}" ng-click="badgeDetail(item)")
					//.badge-item__desc(ng-if="item.desc")
					//	span {{ item.desc }}
					.badge-item__img(ng-class="{'badge-started': item.available}")
						//TODO cambiar img por image
						img(ng-src="{{item.img}}")
					.badge-item__title(title='{{item.name}}') {{item.name}}
					.badge-item__progresbar
						ng-transclude
							c-progressbar(steps="item.parts" current-step="item.currentStep")
		uib-tab(index="$index + 1" heading="{{::'BADGES.tabs.available' | translate}}")
			.badge-grid-wrapper.row
				//TODO cambiar el ng repeat por => $root.customer.badges, dejar este solo para test
				.badge-item.animated.bounceIn(ng-repeat="item in badges" id="availableBadge-item-{{$index}}" style="{{htCol5}}" ng-class="{'col-xs-{{colWidth}}': true}" ng-if="item.available" ng-click="badgeDetail(item)")
					.badge-item__img(ng-class="{'badge-started': item.available}")
						//TODO cambiar img por image
						img(ng-src="{{item.img}}")
					.badge-item__title(title='{{item.title}}') {{item.title}}
					.badge-item__progresbar
						ng-transclude
							c-progressbar(steps="item.parts" current-step="item.currentStep")
		uib-tab(index="$index + 2" heading="{{::'BADGES.tabs.finished' | translate}}")
			.badge-grid-wrapper.row
				//TODO cambiar el ng repeat por => $root.customer.badges, dejar este solo para test
				.badge-item.animated.bounceIn(ng-repeat="item in badges" id="finishedBadge-item-{{$index}}" style="{{htCol5}}" ng-class="{'col-xs-{{colWidth}}': true}" ng-if="item.finished" ng-click="badgeDetail(item)")
					.badge-item__img
						//TODO cambiar img por image
						img(ng-src="{{item.img}}")
					.badge-item__title(title='{{item.title}}') {{item.title}}
