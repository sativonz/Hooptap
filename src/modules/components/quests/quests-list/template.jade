.ht-quests--list__container
	c-widget-header(title="{{ 'QUESTS.title' | translate }}")
	.quest--list__wrapper(data-finished='false', data-active='true' ng-repeat="item in [a, b] track by $index")
		//TODO falta mas logica en el onclick ya que oculta todas las misiones
		.col-xs-12.quest--row(ng-click="toggleDetailQuest()")
			.col-xs-12.quest-row__img_wrapper
				.col-xs-2.quest--row--image-holder
					.quest-row-image
						p.quest-row-image__number-quests {{ $index +1 }}
					//img.quest--row--image(src='https://hooptap.s3.amazonaws.com/upload/cd63eb52f48752a742a13eac005de0dc.png', alt='On-boarding mission')
				.col-xs-10.quest--row--text-holder
					.quest--row--title(ng-class="{ 'active': item.active, 'inactive': item.active, 'lapsed': item.lapsed }") COMPLETE
					.quest--row--progresbar
						ng-transclude
							c-progressbar-quests
					//.quest--row--desc Take a look around the store
					//.quest--row--status-label.hide.bg-yellow Active
			.col-xs-12.quest--row--actual-step(ng-show="showDetailQuests")
				span.actual-step--num Currently in step 1 of 3
				.actual-step--name Visit our blog
			.col-xs-12.limit-quests